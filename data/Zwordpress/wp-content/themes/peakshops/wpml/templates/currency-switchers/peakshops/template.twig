<li class="menu-item menu-item-has-children {{ css_classes }}">
  <a rel="{{ selected_currency }}">{{ get_formatted_price( selected_currency, format ) | raw }}</a>
  <ul class="sub-menu">
    {% for currency in currencies %}
      {% if ( currency != selected_currency) %}
        <li>
            <a rel="{{ currency }}">{{ get_formatted_price( currency, format )|raw }}</a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</li>